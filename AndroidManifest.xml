<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sonicstudios.popcornkernel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <application android:theme="@android:style/Theme.NoTitleBar">
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".startingPoint"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CPUActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="sonicstudios.popcornkernel.CPUACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TweaksActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="sonicstudios.popcornkernel.TWEAKSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DownloadsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="sonicstudios.popcornkernel.DOWNLOADSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="sonicstudios.popcornkernel.ABOUTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>